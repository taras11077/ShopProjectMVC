<div class="container mt-5">
	<h1 class="text-center mb-4">Orders:</h1>
	<table class="table table-striped table-bordered">
		<thead>
		<tr>
			<th class="fs-4">User</th>
			<th class="fs-4">Product</th>
			<th class ="fs-4 w-25">CreatedAt</th>
			<th class="fs-4 w-25">Actions</th>
		</tr>
		</thead>
		<tbody>
		@foreach (var order in Model)
		{
			<tr>
				<td class="fs-5 align-middle">@order.User.Name</td>
				<td class="fs-5 align-middle">@order.Product.Name</td>
				<td class="fs-5 align-middle w-25">@order.CreatedAt</td>
					<td class="w-25">
					<a asp-action="Edit" asp-route-id="@order.Id" class="btn btn-warning btn-sm m-xl-3 fs-5">Edit</a>
					<a asp-action="Details" asp-route-id="@order.Id" class="btn btn-info btn-sm fs-5">Details</a>
					<a asp-action="Delete" asp-route-id="@order.Id" class="btn btn-danger btn-sm m-xl-3 fs-5">Delete</a>
				</td>
			</tr>
		}
		</tbody>
	</table>
</div>
