@model ShopProjectMVC.Core.Models.Product

@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
	<div class="row justify-content-center">
		<div class="card card-create">
			<div class="card-header text-center">
				<h2>Edit Product</h2>
			</div>
			<div class="card-body">
				<form asp-action="Edit" enctype="multipart/form-data">
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
					<input type="hidden" asp-for="Id" />
					<div class="form-group mt-3">
						<label asp-for="Name" class="control-label"></label>
						<input asp-for="Name" class="form-control mt-2" />
						<span asp-validation-for="Name" class="text-danger"></span>
					</div>
						<div class="form-group mt-3">
						<label asp-for="Price" class="control-label"></label>
						<input asp-for="Price" class="form-control mt-2" />
						<span asp-validation-for="Price" class="text-danger"></span>
					</div>
					<div class="form-group mt-3">
						<label asp-for="Description" class="control-label"></label>
						<input asp-for="Description" class="form-control mt-2" />
						<span asp-validation-for="Description" class="text-danger"></span>
					</div>

					<div class="form-group mt-3">
						<label asp-for="Image" class="control-label"></label>
						<div>
							<img class="card-img" src="@(System.IO.Path.Combine("pictures", Model.Image))" alt="@Model.Name" />
						</div>

						<input asp-for="Image" class="form-control mt-2" type="file" name="file" />
						<span asp-validation-for="Image" class="text-danger"></span>
					</div>

					<div class="form-group mt-3">
						<label asp-for="Count" class="control-label"></label>
						<input asp-for="Count" class="form-control mt-2" />
						<span asp-validation-for="Count" class="text-danger"></span>
					</div>
						<div class="form-group mt-4">
							<input type="submit" value="Save" class="btn btn-success mt-3" />
					</div>
				</form>
			</div>
		</div>
	</div>

	<a asp-action="Index" class="btn btn-primary mb-4">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
