@model ShopProjectMVC.Core.Models.User

<div class="container login-container">
	<div class="row justify-content-center">
			<div class="card-login">
				<div class="card-header text-center">
					<h2>Login</h2>
				</div>
				<div class="card-body">
					<form asp-action="Login" method="post">
					<div asp-validation-summary="ModelOnly" class="text-danger"></div>
						<div class="form-group mt-4">
							<label asp-for="Email"></label>
							<input asp-for="Email" type="email" class="form-control mt-2" />
							<span asp-validation-for="Email" class="text-danger"></span>
					</div>
						<div class="form-group mt-4">
							<label asp-for="Password"></label>
							<input asp-for="Password" type="password" class="form-control mt-2" />
							<span asp-validation-for="Password" class="text-danger"></span>
						</div>

						<button type="submit" class="btn btn-primary mt-5 mb-3">Log in</button>

						<a asp-action="Register">Register</a>
					</form>
				</div>
		</div>
	</div>
</div>


@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
